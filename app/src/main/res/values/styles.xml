<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purpleDark</item>
        <item name="colorAccent">@color/purpleDark</item>
    </style>


    <style name="CustomTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/purpleDark</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">@color/purpleDark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NormalText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/purpleDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:divider">@color/purple</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


</resources>
